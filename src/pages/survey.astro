---
import Layout from '../layouts/Layout.astro';
import SurveyForm from '../components/SurveyForm.astro';
---

<Layout title="Artist Survey | Seattle Music Artist Foundry">
  <div class="min-h-screen flex flex-col items-center justify-start px-4 py-12 relative overflow-hidden">
    
    <!-- Header with back button -->
    <div class="w-full max-w-xl flex items-center mb-8 z-10">
      <a href="/" class="flex items-center text-color-text-primary hover:text-color-accent transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mr-2">
          <path d="M19 12H5M12 19l-7-7 7-7"></path>
        </svg>
        <span class="font-medium">Back to Home</span>
      </a>
    </div>
    
    <!-- Main content -->
    <div class="relative max-w-xl w-full flex flex-col items-center z-10">
      <h1 class="text-[2.2rem] font-bold text-center mb-3 leading-tight text-color-text-primary">
        Seattle Music AF
      </h1>
      
      <div class="text-[1.1rem] text-color-text-secondary text-center mb-6 font-medium tracking-wide">
        Help us understand your needs as a Seattle musician
      </div>
      
      <div class="text-[1rem] text-color-text-secondary mb-8 text-center font-medium">
        Your feedback shapes our services
      </div>
      
      <SurveyForm />
    </div>
    
    <!-- Footer -->
    <div class="mt-16 text-center text-color-text-secondary text-sm z-10">
      <p>#SeattleMusicAF &copy; 2025</p>
    </div>
  </div>
</Layout>
