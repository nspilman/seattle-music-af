---
import SeattleBackground from "../components/SeattleBackground.astro";
import PostHog from "../components/posthog.astro";
import '../styles/tailwind.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.png" />
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500&family=Space+Grotesk:wght@700;800&display=swap" rel="stylesheet">
		<meta name="generator" content={Astro.generator} />
		<title>Seattle Music Artist Foundry (#SeattleMusicAF)</title>
		
		<!-- Open Graph / Social Media Meta Tags -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content="Seattle Music Artist Foundry (#SeattleMusicAF)" />
		<meta property="og:description" content="Web infrastructure for Seattle musicians" />
		<meta property="og:image" content="/og-image.png" />
		<meta property="og:url" content="https://seattlemusic.af" />
		<meta property="og:site_name" content="Seattle Music AF" />
		
		<!-- Twitter Card Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="Seattle Music Artist Foundry (#SeattleMusicAF)" />
		<meta name="twitter:description" content="Web infrastructure for Seattle musicians" />
		<meta name="twitter:image" content="/og-image.png" />
		<PostHog />
	</head>
	<body>
		<SeattleBackground />

		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
